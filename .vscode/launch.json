    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest",
            "runtimeArgs": [
                "--no-lazy"
            ],
            "args": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register",
                "src/main.ts",
                "--config=config.json"
            ],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Up",
            "runtimeArgs": [
                "--no-lazy"
            ],
            "args": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register",
                "up/main.ts",
                "messageCategory"
            ],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Init",
            "runtimeArgs": [
                "--no-lazy"
            ],
            "args": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register",
                "config/template/main.ts"
            ],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector"
        },
    ]
}
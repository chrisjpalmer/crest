{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "use": "bash src/tester/use.sh",
    "login": "bash src/tester/login.sh",
    "format-app": "prettier --write \"src/app/**/*.ts\"",
    "format-core": "prettier --write \"src/core/**/*.ts\"",
    "format-database": "prettier --write \"src/database/**/*.ts\"",
    "format-up": "prettier --write \"up/**/*.ts\" --ignore-path \"up/.prettierignore\"",
    "init": "ts-node -r tsconfig-paths/register config/template/main.ts",
    "up": "ts-node -r tsconfig-paths/register up/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^4.5.9",
    "@nestjs/core": "^4.5.10",
    "@nestjs/microservices": "^4.5.8",
    "@nestjs/testing": "^4.5.5",
    "@nestjs/websockets": "^4.5.8",
    "bcrypt": "^2.0.1",
    "class-transformer-validator": "^0.5.0",
    "flags": "^0.1.3",
    "jsonwebtoken": "^8.2.1",
    "moment": "^2.22.1",
    "mysql": "^2.15.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6",
    "ts-simple-ast": "^11.2.0",
    "typescript": "^2.6.2",
    "farmhash": "^2.1.0",
    "typeorm": "^0.2.5"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "colors": "^1.3.0",
    "cross-env": "^5.1.4",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "prompt": "^1.0.0",
    "shelljs": "^0.8.2",
    "supertest": "^3.0.0",
    "to-snake-case": "^1.0.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.3.1",
    "tslint": "5.3.2",
    "tslint-eslint-rules": "^5.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}

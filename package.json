{
  "name": "crest",
  "version": "0.0.2",
  "description": "Crest starter project",
  "license": "MIT",
  "scripts": {
    "format-app": "prettier --write \"src/app/**/*.ts\"",
    "format-core": "prettier --write \"src/core/**/*.ts\"",
    "format-database": "prettier --write \"src/database/**/*.ts\"",
    "format-up": "prettier --write \"up/**/*.ts\" --ignore-path \"up/.prettierignore\"",
    "init": "ts-node -r tsconfig-paths/register config/template/main.ts",
    "up": "ts-node -r tsconfig-paths/register up/main.ts",
    "start": "ts-node -r tsconfig-paths/register src/main.ts --config=config/config.json",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:debug-docker": "nodemon --config nodemon-debug-docker.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js --config=config/config.json",
    "start:hmr": "node dist/server --config=config/config.json",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/websockets": "^5.0.0",
    "bcrypt": "^2.0.1",
    "class-transformer-validator": "^0.5.0",
    "flags": "^0.1.3",
    "jsonwebtoken": "^8.2.1",
    "moment": "^2.22.1",
    "mysql": "^2.15.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "ts-simple-ast": "^11.2.0",
    "typescript": "^2.8.0",
    "farmhash": "^2.1.0",
    "typeorm": "^0.2.5"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "colors": "^1.3.0",
    "cross-env": "^5.1.4",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.11.1",
    "prompt": "^1.0.0",
    "shelljs": "^0.8.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "to-snake-case": "^1.0.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^6.0.0",
    "tsconfig-paths": "^3.3.1",
    "tslint": "5.3.2",
    "tslint-eslint-rules": "^5.1.0",
    "ts-loader": "^4.1.0",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}

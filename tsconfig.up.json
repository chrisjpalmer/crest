{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./up-dist",
    "baseUrl": "./up"
  },
  "include": [
    "up/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "up/template/**/*.ts"
  ]
}
